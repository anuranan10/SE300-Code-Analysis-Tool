<Window x:Class="CodeAnalysisTool.WelcomeScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAT" Height="550" Width="700" WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0">
        <!-- Title -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="50" FontWeight="Bold" Foreground="Black"
                   Margin="0,45,0,0" Text="Code Analysis Tool" />

        <!-- Subtitle -->
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" 
                   FontSize="20" Margin="0,140,0,0" TextAlignment="Center"
                   Foreground="Green">
            <Run Text="Transforming Code into Clarity:"/>
            <LineBreak/>
            <Run Text="Effortlessly Analyze, Visualize, and"/>
            <LineBreak/>
            <Run Text="Elevate your Java Programs to Perfection."/>
        </TextBlock>

        <!-- Button -->
        <Button Content="Get Started" HorizontalAlignment="Center" VerticalAlignment="Top" 
                Width="165" Height="65" Margin="0,345,0,0"
                Background="Green" Foreground="White" FontSize="16" FontWeight="Bold"
                BorderBrush="Transparent" Cursor="Hand" Click="GetStarted_Click"/>
    </Grid>
</Window>